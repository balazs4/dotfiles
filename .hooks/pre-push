# Linux Darwin

[ -f "$PWD/package.json" ] || exit 0;
files=`git log HEAD...origin/$(git rev-parse --abbrev-ref HEAD) --name-status --pretty=format: | grep -E '^(A|M)' | cut -f2 | sort | uniq | xargs`

echo "$0 >> $files"
set -e
npm run eslint-check --silent --if-present
npx prettier --check $files
