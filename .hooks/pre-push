# Linux

[ -f "$PWD/package.json" ] || exit 0;

set -e
files=`git log HEAD...origin/$(git rev-parse --abbrev-ref HEAD) --name-status --pretty=format: \
      | grep -E '^(A|M)' \
      | cut -f2 \
      | sort \
      | uniq \
      | xargs`

[ -z "$files" ] && exit 0
echo "$0 >> npx prettier --ignore-unknown --check $files"
npx prettier --ignore-unknown --check $files
